
@{
    Layout = "~/Views/Shared/Credentials.cshtml";
}

<!-- Latest compiled and minified CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Latest compiled JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

<h5 class="indigo-text">Please, Register your self</h5>
<div class="section"></div>

<div class="container">
    <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">


        <form class="col sm-12" method="post">
            <div class='row'>
                <div class='col s12'>
                </div>
            </div>

            <div class='row'>
                <div class=' col-lg-6 input-field  '>
                    <input class='validate' type='text' name='firstName' id='fName' />
                    <label for='fName'>Enter your First Name</label>
                </div>
                <div class='col-lg-6 input-field  '>
                    <input class='validate' type='text' name='lastName' id='lName' />
                    <label for='lName'>Enter your Last Name</label>
                </div>
            </div>

            <div class='row'>
                <div class='input-field col s12'>
                    <input class='validate' type='email' name='email' id='email' />
                    <label for='email'>Enter your email</label>
                </div>
            </div>

            <div class='row'>
                <div class='input-field col-md-6'>
                    <input class='validate' type='password' name='password' id='password' />
                    <label for='password'>Enter your password</label>
                </div>
                <div class='input-field col-md-6'>
                    <input class='validate' type='password' name='password' id='Cpassword' />
                    <label for='Cpassword'>Please Confirm your password</label>
                </div>
                <label style='margin-top: 15px'>
                    <a class='pink-text' href='#!' style="float: right"><b>Forgot Password?</b></a>
                </label>
            </div>

            <br />
            <center>
                <div class='row'>
                    <button type='submit' name='btn_login' style="color:white" class='col s12 btn btn-large waves-effect indigo'>Register</button>
                </div>
            </center>
        </form>
    </div>
</div>
<span>Already have an account?</span>
<a href="@Url.Action("Login", "Home")" style="color: #e91e63"> Sign in here</a>