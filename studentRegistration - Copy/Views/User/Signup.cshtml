@model studentRegistration.Models.customUser

@*<div>
        @Html.ActionLink("Back to List", "Index")
    </div>*@



@{
    Layout = "~/Views/Shared/Credentials.cshtml";
}

<!-- Latest compiled and minified CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Latest compiled JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

<div class="section"></div>

<div class="container">
    <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 16px 0px 0px; border: 1px solid #EEE;">
        <div class="row">
            <div class='col-sm-5'>
                <img src="~/Content/beam-woman-sitting.gif" style="height:312px; margin-top: 61px" alt="image" />
            </div>

            <div class='col-sm-7'>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <h5 class="indigo-text" style="margin-right: 203px">Please, Register your self</h5>

                    <div class="">
                        <div class="row">
                            <div class="col-lg-6 input-field">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.fName, htmlAttributes: new { @class = "" })
                                    @Html.EditorFor(model => model.fName, new { htmlAttributes = new { @class = "" } })
                                    @Html.ValidationMessageFor(model => model.fName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-lg-6 input-field">
                                @Html.LabelFor(model => model.lName, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.lName, new { htmlAttributes = new { @class = "" } })
                                @Html.ValidationMessageFor(model => model.lName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                @Html.LabelFor(model => model.userName, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "" } })
                                @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                            </div>
                            <label style='margin-top: 15px; color: red'>
                                @ViewBag.Inform
                            </label>
                        </div>

                        <div class="row">
                            <div class="input-field col-md-6">
                                @Html.LabelFor(model => model.passWord, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.passWord, new { htmlAttributes = new { @class = "" } })
                                @Html.ValidationMessageFor(model => model.passWord, "", new { @class = "text-danger" })
                            </div>

                            <div class="input-field col-md-6">
                                @Html.LabelFor(model => model.confirm, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.confirm, new { htmlAttributes = new { @class = "" } })
                                @Html.ValidationMessageFor(model => model.confirm, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <center>
                            <div class="row">
                                <button type='submit' name='btn_login' style="color:white" class='col s12 btn btn-large waves-effect indigo'>Register</button>
                            </div>
                        </center>

                    </div>
                }
                <span>Already have an account?</span>
                <a href="@Url.Action("Login", "User")" style="color: #e91e63"> Sign in here</a>
            </div>
        </div>
    </div>
</div>



@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
