                                </table>
                                <div class="d-flex justify-content-center">
                                    <button type="button" style="background-color: #dfaf69" class="btn ms-2"><a style="text-decoration: none; color: white" href="@Url.Action("AddState", "country_state_city")">Add State</a></button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
