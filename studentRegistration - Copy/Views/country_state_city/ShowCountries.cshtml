@model IEnumerable<studentRegistration.Models.Country>

@{
    Layout = "~/Views/Shared/Dashboard.cshtml";
}




<section class="home-section">
    <nav>
        <div class="sidebar-button">
            <i class='bx bx-menu sidebarBtn'></i>
            <span class="dashboard">Dashboard</span>
        </div>
        <span class="admin_name me-5" style="color: black">Welcome back @Session["Name"]</span>
    </nav>

    <div class="home-content">
        <div class="sales-boxes">
            <div class="recent-sales box">
                <div class="title">Countrie Details</div>
                <div class="sales-details">

                    <div class="container">
                        <div class="table-responsive">
                            <div class="container table-responsive">
                                <table id="dis" class="obd table mb-5">
                                    <thead>
                                        <tr id="hd">
                                            <th>Country</th>
                                            <th style="text-align: right">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.cName)
                                                </td>

                                                <td>
                                                    <div class="d-flex" style="float: right">
                                                        <button type="button" class="btn btn-success mx-2"><a style="text-decoration: none; color: white" href="@Url.Action("EditCountry", "country_state_city", new {  cId=item.cId })">Edit</a></button> |
                                                        <button type="button" class="btn btn-warning mx-2"><a style="text-decoration: none; color: white" href="@Url.Action("Details", "student", new {  cId=item.cId })">Details</a></button> |
                                                        <button type="button" class="btn btn-danger ms-2"><a style="text-decoration: none; color: white" href="@Url.Action("DeleteCountry", "country_state_city", new {  cId=item.cId })">Delete</a></button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <div class="d-flex justify-content-center">
                                    <button type="button" style="background-color: #dfaf69" class="btn ms-2"><a style="text-decoration: none; color: white" href="@Url.Action("AddCountry", "country_state_city")">Add Country</a></button>
                                </div>
                            </div>
                        </div>

                </div>
            </div>
        </div>
    </div>


</section>


