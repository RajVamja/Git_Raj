@model SchoolManagement_343.Models.Model.CustomUserModel

@{
    Layout = "~/Views/Shared/Credentials.cshtml";
}


<!-- Latest compiled and minified CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Latest compiled JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

<div class="section"></div>

<div class="container">
    <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 16px 0px 0px; border: 1px solid #EEE;">
        <h5 class="indigo-text" style="margin-left: 94px">Please, login into your account</h5>
        <div class="row">

            <div class='col-sm-5'>
                <img src="~/Content/beam-woman-sitting.gif" style="height:254px; margin: 6px 138px 0px 0px" alt="image" />
            </div>

            <div class='col-sm-7'>
                @using (Html.BeginForm("Login", "User", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="">
                        <center>
                            <div class='row'>
                                <label style='color: #e91e63; font-size: 15px'>@ViewBag.notify</label>
                            </div>
                        </center>

                        @Html.HiddenFor(model => model.uId)

                        <div class="row">
                            <div class="input-field col s12">
                                @Html.LabelFor(model => model.userName, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "" } })
                                @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                @Html.LabelFor(model => model.passWord, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.passWord, new { htmlAttributes = new { @class = "" } })
                                @Html.ValidationMessageFor(model => model.passWord, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @Html.HiddenFor(model => model.fName)
                        @Html.HiddenFor(model => model.lName)
                        <center>
                            <div class='row'>
                                <button type='submit' name='btn_login' style="color: white" class='col s12 btn btn-large waves-effect indigo'>Login</button>
                            </div>
                        </center>
                    </div>
                }
                <span>Don't have an account? </span><a href="@Url.Action("Signup", "User")" style="color: #e91e63">Sign up here</a>
            </div>

        </div>
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
