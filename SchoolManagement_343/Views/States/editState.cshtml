@model SchoolManagement_343.Models.Context.State

@{
    Layout = "~/Views/Shared/DashboardAdmin.cshtml";
}

<div class="d-flex justify-content-center">
    <h2 class="mt-4">Edit State</h2>
</div>


<div class="wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="container">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">


                    <!-- Horizontal Form -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">State</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.sId)

                                <div class="form-group">
                                    <div class="col-md-12 mt-3">
                                        @*@Html.DropDownList("country", new SelectList(ViewBag.countryList, "cid", "countryname"), "Select Country", new { @class = "form-control" })*@
                                        @Html.DropDownListFor(a => a.cId, ViewBag.CountryList as SelectList, "Select Country", new { @class = "form-control", @value = "cName" })
                                        @Html.ValidationMessageFor(model => model.cId, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.sName, new { htmlAttributes = new { @class = "form-control", @placeholder = " Add state name here" } })
                                        @Html.ValidationMessageFor(model => model.sName, "", new { @class = "text-danger" })
                                    </div>
                                </div>


                             
                                    <div class="card-footer d-flex justify-content-center">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>

                            </div>
                        }

                    </div>


                </div>

            </div>

        </div>

    </section>
</div>


