@model PagedList<WebApiRepo_Models.Context.Country>

@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "CountryIndex";
}

<h2>CountryIndex</h2>

<p>
    @Html.ActionLink("Create New", "AddCountry")
</p>
<table class="table">
    <tr>
        <th>
            Country
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cName)
            </td>
            <td>
                <div style="display: flex">
                    <a class='fas fa-edit' style='font-size:24px; color: goldenrod; margin-right: 2px' href="@Url.Action("EditCountry", "Country", new {cId = item.cId})"></a> |
                    <a class='fas fa-trash' style='font-size:24px; color: indianred;  margin-left: 2px' href="@Url.Action("DeleteSCountry", "Country", new {cId = item.cId})" onclick="return confirm('Are you sure you want to delete this country?');"></a> |
                    <a class='fas fa-info-circle' style='font-size:24px; color: deepskyblue;  margin-left: 2px' href="@Url.Action("Country", "Country", new {cId = item.cId})"></a>
                </div>
            </td>
        </tr>
    }

</table>
<div class="pagination-container"> @Html.PagedListPager(Model, pCountry => Url.Action("CountryIndex", "Country", new { pCountry, search = Request.QueryString["search"] }))</div>
