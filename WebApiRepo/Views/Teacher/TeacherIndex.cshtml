@model PagedList<WebApiRepo_Models.Context.SP_teachersDetail_Result>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/paginationcss.css" rel="stylesheet" />
@using PagedList.Mvc;
@using PagedList;


<table class="table">
    <tr>
        <th>Sr. No.</th>
        <th>Teacher Name</th>
        <th>DOB</th>
        <th>Contact</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Address</th>
        <th>Subjects</th>
        <th>city</th>
        <th>State</th>
        <th>Country</th>
        <th>Actions</th>
    </tr>
    @{int i = 1;}
    @foreach (var item in Model)
    {
        <tr>
            <td>@i</td>
            <td>@item.Teacher_Name</td>
            <td>@item.DOB.ToString("yyyy-MM-dd")</td>
            <td>@item.tPhone</td>
            <td>@item.tEmail</td>
            <td>@item.Gender</td>
            <td>@item.aAddress</td>
            <td>@item.subjects</td>
            <td>@item.cityName</td>
            <td>@item.sName</td>
            <td>@item.cName</td>
            <td>
                <div style="display: flex">
                    <a class='fas fa-edit' style='font-size:24px; color: goldenrod; margin-right: 2px' href="@Url.Action("EditTeacher", "Teacher", new {tId = item.tId, sId = item.sId, cId = item.cId})"></a> |
                    <a class='fas fa-trash' style='font-size:24px; color: indianred;  margin-left: 2px' href="@Url.Action("DeleteTeacher", "Teacher", new {tId = item.tId})" onclick="return confirm('Are you sure you want to delete this teacher?');"></a> |
                    <a class='fas fa-info-circle' style='font-size:24px; color: deepskyblue;  margin-left: 2px' href="@Url.Action("Student", "Teacher", new {tId = item.tId})"></a>
                </div>
            </td>
        </tr>
        i++;
    }

</table>
<div class="pagination-container"> @Html.PagedListPager(Model, pTeacher => Url.Action("TeacherIndex", "Teacher", new { pTeacher, search = Request.QueryString["search"] }))</div>

