@model WebApiRepo_Models.Model.CustomUserModel

@{
    Layout = null;
}


<div class="container">
    <div class="row">
        <div class='col-sm-7'>
            @using (Html.BeginForm("Signup", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <h5 class="indigo-text" style="margin-right: 203px">Please, Register your self</h5>

                <div class="">

                    <div class="col-lg-12 input-field">
                        <div class="form-group">
                            @Html.LabelFor(model => model.fName, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.fName, new { htmlAttributes = new { @class = "" } })
                            @Html.ValidationMessageFor(model => model.fName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-lg-12 input-field">
                        <div class="form-group">
                            @Html.LabelFor(model => model.lName, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.lName, new { htmlAttributes = new { @class = "" } })
                            @Html.ValidationMessageFor(model => model.lName, "", new { @class = "text-danger" })
                        </div>

                        <div class="input-field col s12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.userName, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "" } })
                                @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                            </div>
                            <label style='margin-top: 15px; color: red'>
                                @ViewBag.Inform
                            </label>

                            <div class="input-field col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.passWord, htmlAttributes: new { @class = "" })
                                    @Html.EditorFor(model => model.passWord, new { htmlAttributes = new { @class = "" } })
                                    @Html.ValidationMessageFor(model => model.passWord, "", new { @class = "text-danger" })
                                </div>

                                <div class="input-field col-md-12">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.confirm, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.confirm, new { htmlAttributes = new { @class = "" } })
                                        @Html.ValidationMessageFor(model => model.confirm, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row">
                                    <button type='submit' name='btn_login'>Register</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }
            <span>Already have an account?</span>
            <a href="@Url.Action("Login", "User")" style="color: #e91e63"> Sign in here</a>
        </div>
    </div>
</div>




@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
