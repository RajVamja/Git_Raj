@model ApiProjrct.Models.student

@{
    Layout = "~/Views/Shared/Dashboard.cshtml";
}

<section class="home-section">
    <nav>
        <div class="sidebar-button">
            <i class='bx bx-menu sidebarBtn'></i>
            <span class="dashboard">Dashboard</span>
        </div>
        <span class="admin_name" style="color: black"></span>


    </nav>



    <div class="home-content">
        <div class="sales-boxes">
            <div class="recent-sales box" style="background-color: #0a25584a">
                <div class="title">Details for student Id: @Model.stdId</div>
                <div class="sales-details">

                    <div class="container">


                        <table id="dis" class="obd table mt-4">
                            <tr>
                                <td>
                                    First Name
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.fName)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Last Name
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.lName)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                   DOB
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.DOB)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Contact
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.sPhone)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Email
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.sEmail)
                                </td>
                            </tr>

                            <tr>
                                <td>
                                   Gender
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Gender)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                   Address
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.sAddress)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    City
                                </td>
                                <td>
                                    @foreach (var item in (SelectList)ViewBag.CityList)
                                    {
                                        if (item.Value == Model.city.ToString())
                                        {
                                            <span>@item.Text</span>
                                            break;
                                        }
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    State
                                </td>
                                <td>
                                    @foreach (var item in (SelectList)ViewBag.StateList)
                                    {
                                        if (item.Value == Model.state.ToString())
                                        {
                                            <span>@item.Text</span>
                                            break;
                                        }
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Country
                                </td>
                                <td>
                                    @foreach (var item in (SelectList)ViewBag.CountryList)
                                    {
                                        if (item.Value == Model.country.ToString())
                                        {
                                            <span>@item.Text</span>
                                            break;
                                        }
                                    }
                                </td>
                            </tr>


                        </table>

                    </div>

                    <div class="d-flex justify-content-center">
                        <button type="button" style="background-color: #dfaf69 " class="btn mx-2"><a style="text-decoration: none; color: black" href="@Url.Action("Edit", "student", new { stdId =Model.stdId})">Edit</a></button>
                    </div>

                </div>

            </div>
        </div>
    </div>

</section>
